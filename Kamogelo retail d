  <script>
    // -------- CONFIG --------
    const WHATSAPP_NUMBER = "27600000000"; // <- your full international number (no +)
    const IG_HANDLE = "yourhandle";

    // Example products (edit freely)
    const PRODUCTS = [
      {
        id:"mini-iron",
        title:"Mini Portable Iron",
        price:"R249",
        was:"R299",
        img:"assets/p1.jpg",
        tagline:"Travel-ready, heats in 20s"
      },
      {
        id:"car-vac",
        title:"Wireless Car Vacuum",
        price:"R499",
        was:"R599",
        img:"assets/p2.jpg",
        tagline:"Powerful + compact"
      },
      {
        id:"led-mirror",
        title:"LED Vanity Mirror",
        price:"R699",
        was:"R849",
        img:"assets/p3.jpg",
        tagline:"Dimmable, USB-powered"
      },
      {
        id:"pet-hair",
        title:"Pet Hair Remover",
        price:"R199",
        was:"R249",
        img:"assets/p4.jpg",
        tagline:"Reusable, no refills"
      },
      {
        id:"kitchen-pro",
        title:"5-in-1 Kitchen Slicer",
        price:"R329",
        was:"R399",
        img:"assets/p5.jpg",
        tagline:"Faster food prep"
      },
      {
        id:"massage-gun",
        title:"Deep Tissue Massage Gun",
        price:"R1,099",
        was:"R1,299",
        img:"assets/p6.jpg",
        tagline:"4 heads, 6 speeds"
      }
    ];

    // -------- UTIL --------
    const qs = (s, el=document)=>el.querySelector(s);
    const elGrid = qs('#productGrid');
    const thisYear = new Date().getFullYear();
    qs('#yr').textContent = thisYear;

    // Referral handling (query ?ref=NAME or manual entry)
    const urlRef = new URLSearchParams(location.search).get('ref') || '';
    const savedRef = localStorage.getItem('kamogelo_ref') || '';
    const startingRef = urlRef || savedRef || '';
    if (startingRef) {
      qs('#refInput').value = startingRef;
      localStorage.setItem('kamogelo_ref', startingRef);
      qs('#refNote').textContent = `Referral saved: ${startingRef}. New customers get 10% off.`;
    }
    qs('#refForm').addEventListener('submit', e=>{
      e.preventDefault();
      const v = qs('#refInput').value.trim();
      if(!v){alert("Enter a referral name/code");return;}
      localStorage.setItem('kamogelo_ref', v);
      qs('#refNote').textContent = `Referral saved: ${v}. It will be added to your WhatsApp order.`;
    });

    function waLink(message){
      const ref = localStorage.getItem('kamogelo_ref');
      const full = ref ? `${message}\nReferral: ${ref}` : message;
      return `https://wa.me/${WHATSAPP_NUMBER}?text=${encodeURIComponent(full)}`;
    }

    // Build product cards
    function renderProducts(){
      elGrid.innerHTML = PRODUCTS.map(p=>`
        <article class="card product">
          <div class="p-img"><img src="${p.img}" alt="${p.title}"></div>
          <div class="p-body">
            <h4 class="p-title">${p.title}</h4>
            <p class="tiny">${p.tagline}</p>
            <div class="price"><b>${p.price}</b> <span class="tiny" style="text-decoration:line-through;opacity:.7">${p.was || ""}</span> <span class="badge-warn">15‚Äì20 working days</span></div>
          </div>
          <div class="p-actions" style="padding:0 12px 14px">
            <a class="btn primary" href="${waLink(`Hi, I'd like to order: ${p.title} (${p.id}). Price ${p.price}. Please assist with size/colour & delivery.`)}" target="_blank" rel="noopener">Order on WhatsApp</a>
            <button class="btn ghost" onclick="copyShare('${p.title}')">Share</button>
          </div>
        </article>
      `).join('');
    }
    renderProducts();

    // Header buttons
    function defaultMessage(){
      return waLink("Hi Kamogelo Retail üëã I'd like help placing an order.");
    }
    const headerBtns = [qs('#whatsBtn'), qs('#whatsBtn2')];
    headerBtns.forEach(b=> b && (b.href = defaultMessage()));

    // Share helper
    async function copyShare(name){
      const text = `${name} ‚Äî order from Kamogelo Retail: ${location.origin}${location.pathname}`;
      try{
        await navigator.clipboard.writeText(text);
        alert("Link copied. Share it on WhatsApp/Instagram!");
      }catch(e){
        alert("Copied text:\n"+text);
      }
    }

    // Simple policy modals
    qs('#policyBtn').addEventListener('click', e=>{e.preventDefault();qs('#policyModal').showModal();});
    qs('#privacyBtn').addEventListener('click', e=>{e.preventDefault();qs('#privacyModal').showModal();});
  </script>
